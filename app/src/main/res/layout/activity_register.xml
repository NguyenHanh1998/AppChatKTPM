<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_page"
    tools:context="com.example.hanhs.mychatapp.RegisterActivity">
    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/register_app_bar"
        ></include>


    <EditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="250dp"
        android:inputType="textPersonName"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:hint="Name..."
        android:drawableLeft="@drawable/name_icon"
        android:paddingLeft="10dp"
        android:ems="10"
        android:textColorHint="@color/colorLogin"
        android:background="@drawable/corner_round"/>

    <EditText
        android:id="@+id/register_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="200dp"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="Email..."
        android:drawableLeft="@drawable/icon_user"
        android:background="@drawable/corner_round"
        android:inputType="textEmailAddress|textPersonName"
        android:textColorHint="@color/colorLogin"
        />


    <EditText
        android:id="@+id/register_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/register_email"
        android:drawableLeft="@drawable/icon_password"
        android:background="@drawable/corner_round"
        android:paddingLeft="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPersonName|textPassword"
        android:textColorHint="@color/colorLogin" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark"
        android:hint="Create new acount"
        android:textColorHint="#ffffff"
        android:textSize="20sp"/>


</RelativeLayout>
